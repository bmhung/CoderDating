<%= form_tag "sessions/create", method: :post, class: "navbar-form navbar-left search-form" do %>
  <div class="form-group row">
    <%= label_tag "email", nil, class: "form-control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= text_field_tag "email", nil, class: "form-control", placeholder: "youremail@domain.com" %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag "password", nil, class: "form-control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= password_field_tag "password", nil, class: "form-control", placeholder: "password" %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag "", nil, class: "form-control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= submit_tag "Login", class: "form-submit btn btn-primary" %>
    </div>
  </div>
<% end %>
